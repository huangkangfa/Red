<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gifview_background">
    <include
        android:id="@+id/include_head"
        layout="@layout/item_activity_head"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_below="@+id/include_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt_1"
        android:layout_below="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/layout_number"
        android:layout_below="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:id="@+id/number"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_number"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="11"
            android:hint="手机号" />
        <ImageView
            android:id="@+id/search_iv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/iv_delete_bg"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@+id/layout_number"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@+id/tv_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/img_code"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:id="@+id/code"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:digits="0123456789"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_code"
            android:layout_toEndOf="@+id/img_code" />
        <TextView
            android:id="@+id/tv_code_thread"
            android:layout_toLeftOf="@+id/tv_code"
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/alert_red"
            android:textSize="15.5sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_4"
        android:layout_below="@+id/layout_code"
        android:layout_alignLeft="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>


    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_below="@+id/tv_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="密码"
            android:layout_centerVertical="true"
            android:inputType="numberPassword"
            android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="11"
            android:layout_toRightOf="@+id/img_password" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_2"
        android:layout_below="@+id/layout_password"
        android:layout_alignLeft="@+id/layout_number"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>


    <Button
        android:layout_below="@+id/tv_2"
        android:id="@+id/btn_entry"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_red_min"
        android:textSize="20sp"
        android:text="注册"/>
</RelativeLayout>