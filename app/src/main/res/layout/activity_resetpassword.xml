<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line_color">
    <include
        android:id="@+id/include_head"
        layout="@layout/item_activity_head"/>
    <RelativeLayout
        android:id="@+id/rl_reset_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_reset_phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:id="@+id/et_reset_phone"
            android:layout_toRightOf="@+id/img_reset_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="手机号"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:digits="0123456789"
            android:maxLength="11"
            android:textSize="18sp"
            android:background="@null"/>
        <ImageView
            android:id="@+id/search_iv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/iv_delete_bg"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_black2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/rl_reset_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_reset_code"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/img_reset_code"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:digits="0123456789"
            android:textSize="19sp"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_code_thread"
            android:layout_toLeftOf="@+id/tv_code"
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/alert_red"
            android:textSize="15.5sp"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_black3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"/>

    <Button
        android:id="@+id/btn_entry"
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="下一步"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_red_min"
        android:layout_below="@+id/tv_black3"
        android:layout_centerHorizontal="true" />


</LinearLayout>