<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/line_color">
    <include
        android:id="@+id/include_head"
        layout="@layout/item_activity_head"/>
    <RelativeLayout
        android:id="@+id/rl_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_oldpassword"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:text="原密码"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/old_password"
            android:layout_toRightOf="@+id/tv_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="11"
            android:textColorHint="@color/line_gray"
            android:textSize="18sp"
            android:background="@null"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_black1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/rl_newpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_newpassword"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="新密码"
            android:textSize="18sp"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/new_password"
            android:layout_toRightOf="@+id/tv_newpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="11"
            android:textColorHint="@color/line_gray"
            android:textSize="18sp"
            android:background="@null"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_black2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/rl_sure_newpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_sure_newpassword"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="确认密码"/>
        <EditText
            android:id="@+id/sure_newpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tv_sure_newpassword"
            android:hint="请输入"
            android:inputType="numberPassword"
            android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="11"
            android:textColorHint="@color/line_gray"
            android:textSize="18sp"
            android:background="@null"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_black3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>




</LinearLayout>