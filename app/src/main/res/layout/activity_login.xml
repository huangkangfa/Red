<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gifview_background">
    <include
        android:id="@+id/include_head"
        layout="@layout/item_activity_head"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_below="@+id/include_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:background="@color/alert_red"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt_1"
        android:layout_below="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <RelativeLayout
        android:id="@+id/layout_number"
        android:layout_below="@+id/txt_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:id="@+id/number"
            android:layout_toRightOf="@+id/img_number"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:inputType="number"
            android:digits="0123456789"
            android:textSize="18sp"
            android:maxLength="11"
            android:hint="手机号" />
        <ImageView
            android:id="@+id/search_iv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/iv_delete_bg"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@+id/layout_number"
        android:layout_alignLeft="@+id/layout_number"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_below="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/img_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"  />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入密码"
            android:textSize="18sp"
            android:inputType="numberPassword"
            android:digits="0123456789.abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="16"
            android:layout_toRightOf="@+id/img_password" />
        <ImageView
            android:id="@+id/img_show"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_2"
        android:layout_below="@+id/layout_password"
        android:layout_alignLeft="@+id/layout_number"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/register"
        android:layout_below="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_height="20dp"
        android:text="注册"/>

    <TextView
        android:id="@+id/forget_password"
        android:layout_below="@+id/tv_2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="忘记密码"/>


    <Button
        android:id="@+id/btn_entry"
        android:layout_marginTop="31dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_red_min"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true" />
</RelativeLayout>