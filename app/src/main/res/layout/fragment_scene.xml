<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/head_rl_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/themeColor"
        android:padding="5dp">

        <ImageView
            android:id="@+id/head_img_persion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/head_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/head_img_persion"
            android:maxLength="6"
            android:text="群组昵称测试"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/head_txt_title_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/head_img_persion"
            android:padding="0dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/head_img_et"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/head_img_others"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/head_img_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="更多" />
    </RelativeLayout>

    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/head_rl_head"
        android:background="@color/line_gray" />

    <GridView
        android:id="@+id/gv"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3" />
</LinearLayout>